<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="questions:"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txt_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_text"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <RadioGroup
        android:id="@+id/json_rgp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_questions">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:checked="true"
            android:id="@+id/choose_1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_2"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_3"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_4"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_5"
            />
    </RadioGroup>

    <Button
        android:id="@+id/bt_show"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/json_rgp"
        android:text="show answers"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="show"
        />

    <TextView
        android:id="@+id/txt_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_show"
        android:layout_marginTop="20dp"
        android:text="your answers are here:"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/bt_choose"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="LET'S START!"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="choose"
        />

</RelativeLayout>